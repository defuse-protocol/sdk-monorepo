		"dev": "tsup --watch",
		"lint": "biome check .",
		"format": "biome format --write .",
		"typecheck": "npx tsc --noEmit"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@defuse-protocol/contract-types": "workspace:*",
		"@defuse-protocol/internal-utils": "workspace:*",
		"@hot-labs/omni-sdk": "2.14.0",
		"@isaacs/ttlcache": "^1.0.0",
		"@lifeomic/attempt": "^3.0.0",
		"@scure/base": "^1.0.0",
		"borsher": "^4.0.0",
		"near-api-js": "^4.0.0 || ^5.0.0",
		"viem": "^2.0.0",
		"omni-bridge-sdk": "0.12.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"tsup": "^8.5.0",
		"vitest": "2.1.2"
	}
